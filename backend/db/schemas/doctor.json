{
  "bsonType": "object",
  "required": ["identite", "specialites", "facility_id", "created_at"],
  "properties": {
    "facility_id": { "bsonType": "objectId" },
    "identite": {
      "bsonType": "object",
      "required": ["prenom", "nom"],
      "properties": {
        "prenom": { "bsonType": "string" },
        "nom": { "bsonType": "string" }
      }
    },
    "specialites": { "bsonType": "array", "items": { "bsonType": "string" }, "minItems": 1 },
    "licence": { "bsonType": "string" },
    "contacts": {
      "bsonType": "object",
      "properties": {
        "phone": { "bsonType": "string" },
        "email": { "bsonType": "string" }
      }
    },
    "lieu_affectation": { "bsonType": "string" },
    "availability": {
      "bsonType": "array",
      "items": {
        "bsonType": "object",
        "properties": {
          "weekday": { "enum": [0,1,2,3,4,5,6] },
          "start": { "bsonType": "string" },
          "end": { "bsonType": "string" }
        }
      }
    },
    "created_at": { "bsonType": "date" },
    "updated_at": { "bsonType": "date" },
    "deleted": { "bsonType": "bool" }
  }
}
